# Environment Variables
# Copy this file to .env and fill in your values

# Site URL for sitemap and robots (set to your deployed domain)
NEXT_PUBLIC_SITE_URL=https://animestockexchange.adarcher.app

# (Optional) Plausible analytics configuration
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=animestockexchange.adarcher.app
# NEXT_PUBLIC_PLAUSIBLE_API_HOST=https://plausible.your-host.example

# Database connection string (optional - for future full-stack features)
# DATABASE_URL=postgresql://user:password@localhost:5432/anime_stock_db

# Next.js environment variables
NODE_ENV=production

# Appwrite configuration
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://appwrite.yourdomain.com/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=<your-appwrite-project-id>
NEXT_PUBLIC_APPWRITE_PROJECT_NAME=animestockexchange
NEXT_PUBLIC_APPWRITE_DATABASE_ID=anime_stock_db
APPWRITE_API_KEY=<server-api-key-for-sync>

# SMTP configuration for transactional email
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=<smtp-username>
SMTP_PASSWORD=<smtp-password>
SMTP_FROM="Anime Stock Exchange <noreply@yourdomain.com>"

# Add other environment variables as needed for your full-stack features
