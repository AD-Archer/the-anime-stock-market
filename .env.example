# Environment Variables
# Copy this file to .env and fill in your values

# Site URL for sitemap and robots (set to your deployed domain)
NEXT_PUBLIC_SITE_URL=https://www.animestockmarket.tech

# (Optional) Plausible analytics configuration
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=www.animestockmarket.tech
# NEXT_PUBLIC_PLAUSIBLE_API_HOST=https://plausible.your-host.example

# Kill switch (DESTRUCTIVE) - enable only for emergency / initial production clearing
# To run the kill switch endpoint you must set KILL_SWITCH_ENABLED=true and set a strong secret
KILL_SWITCH_ENABLED=false
KILL_SWITCH_SECRET=change_me_to_a_long_random_secret  # REQUIRED when enabling the kill switch

# Seeding safety flags (production protected)
# Set CONFIRM_PROD_SEED=true to intentionally run the seeder in production
CONFIRM_PROD_SEED=false
# By default user seeding is skipped in production. Set to true to allow.
ALLOW_SEED_USERS_IN_PROD=false
# By default stocks without an Anilist reference will be rejected in production.
ALLOW_UNVERIFIED_STOCKS=false
whe
# Database connection string (optional - for future full-stack features)
# DATABASE_URL=postgresql://user:password@localhost:5432/anime_stock_db

# Next.js environment variables
NODE_ENV=production

# Appwrite configuration
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://appwrite.yourdomain.com/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=<your-appwrite-project-id>
NEXT_PUBLIC_APPWRITE_PROJECT_NAME=animestockmarket
NEXT_PUBLIC_APPWRITE_DATABASE_ID=anime_stock_db
APPWRITE_API_KEY=<server-api-key-for-sync>

# SMTP configuration for transactional email
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=<smtp-username>
SMTP_PASSWORD=<smtp-password>
SMTP_FROM="Anime Stock Market <noreply@yourdomain.com>"

